<div class="row justify-content-center pe-1 ps-1">
      <div class="col-xxl-8 col-xl-8 col-lg-6 col-md-8 col-sm-8 col-xs-12 border mt-5 mb-5 pt-5 pb-5" id="login">
            <div class="bloque animate__animated animate__flipInX">
                  <div class="row">
                        <h2 class="col-12 text-center">Restablecer Contraseña</h2>
                  </div>
                  <div class="row">
                        <div class="col-12 d-flex justify-content-center">
                              <form class="col-xxl-5 col-xl-5 col-lg-6 col-md-8 col-sm-10 col-xs-12 mt-4" id="resetPasswordForm">
                                    <input type="hidden" name="token" value="{{token}}">
                                    <div class="mb-1">
                                          <input type="email" class="form-control form-control-lg rounded-0 enter"
                                                name="email" placeholder="E-MAIL" maxlength="60">
                                    </div>
                                    <p class="hidden" id="emailVacioInicio">E-MAIL no puede estar vacio</p>
                                    <p class="hidden" id="emailIncorrectoInicio">E-MAIL incorrecto</p>
                                    <div class="mt-4">
                                          <input type="password"
                                                class="form-control form-control-lg rounded-0 passwordUsuario enter"
                                                name="password" placeholder="NUEVA CONTRASEÑA" maxlength="60">
                                    </div>
                                    <div class="mt-4">
                                          <input type="password"
                                                class="form-control form-control-lg rounded-0 passwordUsuario enter"
                                                name="confirm_password" placeholder="CONFIRMAR NUEVA CONTRASEÑA" maxlength="60">
                                    </div>
                                    <p class="hidden" id="passwordVaciaInicio">Contraseña no puede estar vacia</p>
                                    <div class="mb-2 mt-4">
                                          <button type="submit" class="col-12 btn btn-primary rounded-0">
                                                <a class="text-decoration-none text-reset">RESTABLECER CONTRASEÑA</a>
                                          </button>
                                    </div>
                                    <p class="hidden" id="usuarioNoExiste">El usuario y/o contraseña ingresada incorrecta.</p>
                              </form>
                              
                        </div>
                        </div>
            </div>
      </div>
</div>

<script src="/js/sessions/resetPassword.js"></script>